<% provide(title:"パスワードを忘れた方") %>
<div class="jumbotron jumbotron-fruid" id="hero" style="background-image:url(/assets/sign_in.jpg)">
  <div class="row">
      <div class="col-xs-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">パスワードをリセット</h5>
            <%= render "devise/shared/error_messages", resource: @user %>
            <%= form_with model:@user, url: password_path, class:"form-signin" do |f|%>
              <div class="form-label-group">
                <%= f.email_field :email, autocomplete:"Email address", id:"inputEmail", class:"form-control", required: true, autofocus: true%>
                <%= f.label :email %>
              </div>
              <%= f.submit "パスワードリセットメールを送信する", class:"btn btn-lg btn-primary btn-block text-uppercase"%>
              <hr class="my-4">
              <%= link_to "ログイン画面はこちら", new_user_session_path ,class:"btn btn-lg btn-google btn-block text-uppercase"%>
              <%= link_to "登録画面はこちら", root_path , class:"btn btn-lg btn-google btn-block text-uppercase"%>
            <% end %>
          </div>
        </div>
      </div>
  </div>
</div>

